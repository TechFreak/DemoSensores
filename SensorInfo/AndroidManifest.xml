<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.juliansuarez.sensorinfo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="co.juliansuarez.sensorinfo.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="co.juliansuarez.sensorinfo.ProximityActivity"
            android:label="@string/title_activity_proximity"
            android:parentActivityName="co.juliansuarez.sensorinfo.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="co.juliansuarez.sensorinfo.MainActivity" />
        </activity>
        <activity
            android:name="co.juliansuarez.sensorinfo.PositionActivity"
            android:label="@string/title_activity_position"
            android:parentActivityName="co.juliansuarez.sensorinfo.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="co.juliansuarez.sensorinfo.MainActivity" />
        </activity>
        <activity
            android:name="co.juliansuarez.sensorinfo.TouchScreenActivity"
            android:label="@string/title_activity_touch_screen"
            android:parentActivityName="co.juliansuarez.sensorinfo.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="co.juliansuarez.sensorinfo.MainActivity" />
        </activity>
        <activity
            android:name="co.juliansuarez.sensorinfo.AccelerometerActivity"
            android:label="@string/title_activity_accelerometer"
            android:parentActivityName="co.juliansuarez.sensorinfo.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="co.juliansuarez.sensorinfo.MainActivity" />
        </activity>
    </application>

</manifest>